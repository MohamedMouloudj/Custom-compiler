VAR_GLOBAL {
    INTEGER X, Y, Z;
    FLOAT  TEMPERATURE, HUMIDITY;
    CHAR STATUS;
}

DECLARATION {
    INTEGER A, B, C;
    FLOAT Rate;
}

INSTRUCTION {
    X = 10;
    Y = X + 5 * (2 - 3);

    IF (X > 5) {
        WRITE("x is greater than 5");
    } ELSE {
        WRITE("x is not greater than 5");
    }
    FOR (I = 0: I < 10: I = 2) {
        WRITE("Iteration: ", I);
    }
    STATUS = 'A';
    Z = 2.5;

}