VAR_GLOBAL {
    INTEGER A, B, C;
    CHAR X[3], Y[2];
}

DECLARATION {
    CONST FLOAT PI = 3.14;
    INTEGER D, E;           // Error: Missing comma between `D` and `E`
    CHAR Z[5]              // Error: Missing semicolon at the end of the declaration
}

INSTRUCTION {
    A = 10;
    IF (A > B {            // Error: Missing closing parenthesis in `IF` condition
        B = A + 1;
    }
    FOR (I = 0 : A + 1 10) { // Error: Missing colon between `A + 1` and `10` in `FOR` loop
        X[0] = 'a';
    }
    WRITE(A );            // Error: Trailing comma in the `WRITE` statement
    C = (A + B;            // Error: Missing closing parenthesis in the expression
}
